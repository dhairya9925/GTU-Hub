    <script>
        // Course data
                let courses = [];

                {% for course in courses %}
                    course = {
                        "shortform": "{{course.shortform}}",
                        "name": "{{course.name}}",
                    }
                    courses.push(course)
                    {% comment %} console.log("name = " + {{course.name}}) {% endcomment %}
                {% endfor %}

                console.log(courses)

                let filteredCourses = [...courses];

                // DOM elements
                const coursesGrid = document.getElementById('courses-grid');
                const noResults = document.getElementById('no-results');
                const searchInput = document.getElementById('search-input');
                const sortSelect = document.getElementById('sort-select');
                const filterBtns = document.querySelectorAll('.filter-btn');

                // Create course card HTML
                function createCourseCard(course) {
                    return `
                        <a href="#"
                        class="group relative block w-80 text-gray-900 dark:text-white font-medium bg-transparent focus:outline-none transition-transform hover:scale-[1.02] duration-300">

                            <!-- Corner Borders -->
                            <div class="pointer-events-none absolute inset-0 z-20">
                                <div class="absolute top-0 left-0 w-4 h-4 border-t border-l border-orange-300 dark:border-orange-500"></div>
                                <div class="absolute top-0 right-0 w-4 h-4 border-t border-r border-orange-300 dark:border-orange-500"></div>
                                <div class="absolute bottom-0 left-0 w-4 h-4 border-b border-l border-orange-300 dark:border-orange-500"></div>
                                <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-orange-300 dark:border-orange-500"></div>
                            </div>

                            <!-- Card Container -->
                            <div class="relative overflow-hidden shadow-xl backdrop-blur 
                                        bg-white dark:bg-[#0f1923] transition-colors duration-300">

                                <!-- Card Content -->
                                <div class="relative z-10">
                                    <!-- Header -->
                                    <div class="relative px-6 py-4 border-b border-orange-200 
                                                bg-orange-50 dark:bg-white/10 transition-colors duration-300 overflow-hidden">

                                        <!-- Skewed Hover Layer -->
                                        <div class="absolute top-0 bottom-0 left-[6px] w-0 
                                                    bg-[#fa903c]/80 -skew-x-[15deg] transition-all duration-300 ease-in 
                                                    group-hover:w-[calc(95.5%)] z-0"></div>

                                        <!-- Header Content -->
                                        <div class="relative z-10">
                                            <h3 class="text-2xl font-bold uppercase tracking-wide">${course.shortform}</h3>
                                            <p class="text-sm text-gray-800 dark:text-white/90 mt-1">${course.name}</p>
                                        </div>
                                    </div>

                                    <!-- Info Section -->
                                    <div class="px-6 py-5 space-y-4 bg-orange-100 dark:bg-[#101c2e] transition-colors duration-300">
                                        <div class="flex justify-between text-gray-700 dark:text-white/80 text-sm">
                                            <span>Total Branches</span>
                                            <span>${course.total_branch}</span>
                                        </div>
                                        <div class="flex justify-between text-gray-700 dark:text-white/80 text-sm">
                                            <span>Total Subjects</span>
                                            <span>${course.total_subjects}</span>
                                        </div>
                                        <div class="flex justify-between text-gray-700 dark:text-white/80 text-sm">
                                            <span>Total Institutes</span>
                                            <span>${course.total_institute}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    `;
                }
                // Render courses
                function renderCourses(coursesToRender) {
                    if (coursesToRender.length === 0) {
                        coursesGrid.innerHTML = '';
                        noResults.classList.remove('hidden');
                    } else {
                        noResults.classList.add('hidden');
                        coursesGrid.innerHTML = coursesToRender.map(createCourseCard).join('');
                    }
                }

                // Filter courses
                function filterCourses() {
                    const activeFilter = document.querySelector('.filter-btn.active').dataset.filter;
                    const searchTerm = searchInput.value.toLowerCase();

                    filteredCourses = courses.filter(course => {
                        const matchesFilter = activeFilter === 'all' || course.category === activeFilter;
                        const matchesSearch = course.name.toLowerCase().includes(searchTerm) || 
                                            course.description.toLowerCase().includes(searchTerm);
                        return matchesFilter && matchesSearch;
                    });

                    sortCourses();
                }

                // Sort courses
                function sortCourses() {
                    const sortBy = sortSelect.value;
                    
                    filteredCourses.sort((a, b) => {
                        switch (sortBy) {
                            case 'name':
                                return a.name.localeCompare(b.name);
                            case 'duration':
                                return a.duration.localeCompare(b.duration);
                            case 'level':
                                return a.level.localeCompare(b.level);
                            default:
                                return 0;
                        }
                    });

                    renderCourses(filteredCourses);
                }

                // Show course details
                function showCourseDetails(courseId) {
                    const course = courses.find(c => c.id === courseId);
                    alert(`Course: ${course.name}\n\nDuration: ${course.duration}\nLevel: ${course.level}\nFees: ${course.fees}\nAvailable Seats: ${course.seats}\n\nDescription: ${course.description}\n\nFor admission inquiries, please contact our admissions office.`);
                }

                // Event listeners

                filterBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        // Remove active styling from all buttons
                        filterBtns.forEach(b => {
                            b.classList.remove(
                                'active',
                                'bg-orange-600',
                                'text-white',
                                'border-orange-600'
                            );
                            b.classList.add(
                                'bg-orange-200',
                                'dark:bg-[#140f0e]',
                                'text-orange-900',
                                'dark:text-white',
                                'border-transparent'
                            );
                        });

                        // Add active styling to the clicked button
                        btn.classList.add(
                            'active',
                            'bg-orange-600',
                            'text-white',
                            'border-orange-600'
                        );
                        btn.classList.remove(
                            'bg-orange-200',
                            'dark:bg-[#140f0e]',
                            'text-orange-900',
                            'dark:text-white',
                            'border-transparent'
                        );

                        // Call your course filtering logic
                        filterCourses();
                    });
                });

                searchInput.addEventListener('input', filterCourses);
                sortSelect.addEventListener('change', sortCourses);

                // Initial render
                renderCourses(courses);

                // Make showCourseDetails globally available
                window.showCourseDetails = showCourseDetails;
    </script>
{% endblock content %}

