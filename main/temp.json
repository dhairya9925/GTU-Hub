            <div id="courses-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Course cards will be injected here -->
            </div>
            <div id="no-results" class="hidden text-center py-16">
                <div class="text-gray-400 text-6xl mb-4">üîç</div>
                <h3 class="text-2xl font-bold text-orange-700 dark:text-orange-300 mb-2">No courses found</h3>
                <p class="text-orange-600 dark:text-orange-200">Try adjusting your search or filter criteria</p>
            </div>
        </div>
